// https://www.typescriptlang.org/ja/tsconfig
{
  "include": ["./**/*"],

  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "ESNext",
    "target": "ES2021",

    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,

    "noEmit": true
  }
}
